{
  "id": "tmdb-watch-providers",
  "name": "TMDB Watch Providers",
  "version": "1.0.0",
  "description": "Mostrar dónde ver (Filmin, Netflix, etc.) usando TMDB.",
  "manifestVersion": 1,
  "target": "web",
  "entry": "index.js",
  "resources": ["stream"],
  "types": ["movie", "series"],
  "settings": [
    {
      "key": "tmdbApiKey",
      "type": "text",
      "label": "TMDB API Key",
      "required": true
    },
    {
      "key": "region",
      "type": "text",
      "label": "Región",
      "default": "ES"
    }
  ]
}
